{% extends 'base.html.twig' %}

{% block title %}
	Liste
{% endblock %}

{% block body %}
    <h1>Liste des motos</h1>
    <div class="text-end"><a href="{{ path('app_add')}}" class="btn btn-warning"><i class="fas fa-plus"></i></a></div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Prix</th>
                <th>Pays</th>
                <th>Description</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for moto in tabMotos %}
            <tr>
                <td>{{ moto.id }}</td>
                <td>{{ moto.marque }}</td>
                <td>{{ moto.modele }}</td>
                <td>{{ moto.prix }} â‚¬</td>
                <td>{{ moto.pays }}</td>
                <td>{{ moto.description }}</td>
                <td><a href="{{path('app_edit', {id:moto.id}) }}"><i class="text-success fas fa-edit"></i></a></td>
                <td><a href="{{path('app_delete', {id:moto.id}) }}"><i class="text-danger fas fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
